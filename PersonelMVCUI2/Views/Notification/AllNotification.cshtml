@using EntityLayer.Concrete
@model List<Notification>


@{
    ViewData["Title"] = "AllNotification";
    Layout = "WriterLayout";
}

<h1>Tüm Bildirimler</h1>
<table class="table table-borderless">
    <tr>
        <th>#</th>
        <th>Bildirim Başlığı</th>
        <th>Bildirim Konusu</th>
        <th>Bildirim Tarihi</th>
    </tr>
    @foreach (var item in Model)
        {
     <tr>
        <td>@item.NotificationId</td>
        <td>@item.NotificationType</td>
        <td>@item.NotificationDetails</td>
        <td>@item.NotificationDate.ToShortTimeString()</td>
     </tr>
    
        }

</table>
