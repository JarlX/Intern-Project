@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "MailBox";
    Layout = "WriterLayout";
}

<h1>Gelen Kutusu</h1>
<table class="table table-hoover">
    <tr>
        <th>#</th>
        <th>Mesaj Konusu</th>
        <th>Gönderen</th>
        <th>Tarihi</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageId</td>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@item.MessageDate.ToShortDateString()</td>
            <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-info">Mesajı Aç</a></td>

        </tr>


    }
</table>




