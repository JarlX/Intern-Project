@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>


@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}
<h1>Kategori Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Başlığı</th>
        <th>Pasif Hale Getir</th>
        <th>Aktif Hale Getir</th>
        <th>Sil</th>
    </tr>

   @foreach(var item in Model)
            {
    <tr>
            
        <th>@item.CategoryId</th>
        <td>@item.CategoryName</td>
        <td><a href="/Admin/Category/CategoryDelete/@item.CategoryId" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-warning">Pasif Hale Getir</a></td>

        <td><a href="#" class="btn btn-success">Aktif Hale Getir</a></td>
        <td><a href="#" class="btn btn-danger">Sil</a></td>
           
        
    </tr>
    }
</table>
<a href="/Admin/Category/AddCategory" class="btn btn-success">Yeni Kategori Ekle</a>
<br /><br />

@Html.PagedListPager((IPagedList)Model,page => Url.Action("Index", new {page}))

